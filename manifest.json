{
  "{{firefox}}.browser_specific_settings": {
    "gecko": {
      "id": "opinionated-new-tab@utkarsh",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "name": "Opinionated New Tab",
  "description": "A dense, keyboard-first new tab dashboard",
  "author": "UtkarshUsername",
  "homepage_url": "https://github.com/UtkarshUsername/Opinionated-New-Tab",
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,

  "{{chrome}}.action": {
    "default_popup": "popup/popup.html"
  },
  "{{firefox}}.browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Opinionated New Tab"
  },
  "background": {
    "{{chrome}}.service_worker": "background/background.js",
    "{{firefox}}.scripts": ["background/background.js"],
    "{{firefox}}.persistent": false
  },
  "permissions": ["storage"],
  "chrome_url_overrides": {
    "newtab": "newtab/newtab.html"
  },
  "{{firefox}}.content_security_policy": "script-src 'self'; object-src 'self'",
  "{{chrome}}.content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
